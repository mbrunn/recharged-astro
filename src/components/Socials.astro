---
import { Icon } from 'astro-icon'
---

<!-- Add font awesome icons -->
<div class="flex justify-center">
  <ul class="grid gap-4 grid-rows-1 grid-flow-col items-center min-height-min">
    <li>
      <a href={ import.meta.env.INSTAGRAM_URL }>
        <Icon size="24px" name="mdi:instagram"></Icon>
      </a>
    </li>
    &#124;
    <li>
      <a href={ import.meta.env.YOUTUBE_URL }>
        <Icon size="24px" name="mdi:youtube"></Icon>
      </a>
    </li>
    &#124;
    <li>
      <a href={ import.meta.env.APPLEMUSIC_URL }>
        <Icon size="24px" viewBox="-3 -3 38 38" name="cib:apple-music"></Icon>
      </a>
    </li>
    &#124;
    <li>
      <a href={ import.meta.env.SPOTIFY_URL }>
        <Icon size="24px" name="mdi:spotify"></Icon>
      </a>
    </li>
    &#124;
    <li>
      <a href={ import.meta.env.FACEBOOK_URL }>
        <Icon size="24px" name="mdi:facebook"></Icon>
      </a>
    </li>
    &#124;
    <li>
      <a href={ "mailto:" + import.meta.env.EMAIL_ADDRESS }>
        <Icon size="24px" name="mdi:email"></Icon>
      </a>
    </li>
  </ul>
</div>

<style>
  ul li {
      display:inline-block;
      list-style-type:none;
  }
</style>