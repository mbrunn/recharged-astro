---
export interface Props {
    topColor: string;
    bottomColor: string;
}

const { topColor, bottomColor } = Astro.props;
---
<div class="flex w-full h-auto">
    <svg class="object-fill" viewBox="0 0 1439 36" xmlns="http://www.w3.org/2000/svg">
        <path d="M0 0L1440 0L0 37V0Z" fill={ topColor }/>
        <path d="M1440 37H0L1440 0V37Z" fill={ bottomColor }/>
    </svg>
</div>
