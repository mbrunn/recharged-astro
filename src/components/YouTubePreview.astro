---
import SocialsVertical from "./SocialsVertical.astro";
import { Icon } from 'astro-icon'
import { instagram_url,  youtube_url, applemusic_url, spotify_url, facebook_url, email_address} from '../constants/socials'
---
<div class="flex justify-center">
    <div class="flex flex-col justify-center content-center w-full sm:max-w-2xl pt-3">
        <h1 class="text-2xl md:text-5xl pb-4">
            Masquerade
        </h1>
        <iframe class="relative aspect-video" src="https://www.youtube-nocookie.com/embed/e8gmToIEkfI" title="RECHARGED - Masquerade" frameborder="0" allow="clipboard-write; encrypted-media; web-share" allowfullscreen></iframe>
        <div class="flex flex-row p-2 gap-2 content-center items-center">
            <p class="grow text-left sm:text-xl p-4">
                Einer unserer fr√ºhen Songs aus unserem ersten Album.
                <br/>
                Jetzt auch auf Spotify und Apple Music:
            </p>
            <a href={ applemusic_url }>
                <Icon class="w-8 sm:w-14 transition ease-in-out hover:scale-110 duration-200" viewBox="-3 -3 38 38" name="cib:apple-music"></Icon>
            </a>
            <a href={ spotify_url }>
                <Icon  class="w-8 sm:w-14 transition ease-in-out hover:scale-110 duration-200" name="mdi:spotify"></Icon>
            </a>
        </div>
    </div>
</div>

<style>
    h1 {
        font-family: 'Iceberg';
    }
</style>