---
export interface Props {
  title: string;
}

const { title } = Astro.props;

import '../styles/globalStyle.astro';
import Footer from '@components/Footer.astro';
import Header from '@components/Header.astro';
import CookieConsent from '@components/CookieConsent.astro';
import { SEO } from "astro-seo";
---

<!DOCTYPE html>
<html lang="de" class="scroll-smooth">
  <head>
    <SEO
      title="Recharged - Bandwebsite"
      description="Wir sind Recharged, eine alternative Rockband aus NiederÃ¶sterreich."
      openGraph={{
        basic: {
          title: "Recharged - Bandwebsite",
          type: "Bandwebsite",
          image: "https://www.recharged.at/images/Schriftzug_trans_white.png",
          url: "recharged.at",
        },
        optional: {
          locale: "de_AT"
        },
        image: {
          alt: "A thunderstorming circle that contains a lightningbolt and a text saying Recharged."
        }
      }}
      extend={{
        // extending the default link tags
        link: [{ rel: "icon", href: "/favicon.ico" }],
      }}
    />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <!-- Put this part before </body> tag -->
  <input type="checkbox" id="my-modal-6" class="modal-toggle" />
  <div class="modal modal-bottom sm:modal-middle">
    <div class="modal-box">
      <h3 class="font-bold text-lg">Congratulations random Internet user!</h3>
      <p class="py-4">You've been selected for a chance to get one year of subscription to use Wikipedia for free!</p>
      <div class="modal-action">
        <label for="my-modal-6" class="btn">Yay!</label>
      </div>
    </div>
  </div>

  <body>
    <Header/>
    <slot />
    <Footer/>    
    <CookieConsent />
  </body>  
</html>