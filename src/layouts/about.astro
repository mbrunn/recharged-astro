---
import Layout from "@layouts/Layout.astro";
import Card from "@components/Card.astro";
import { Icon } from 'astro-icon/components'

import { dropbox_link } from '../constants/socials'

const {frontmatter} = Astro.props;
---

<Layout title="Recharged - Ãœber uns">
  <main>
      <div class="home-card bg-secondary text-white py-3">
          <Card title={frontmatter.title}>
            <a href={dropbox_link} class="flex flex-row items-center justify-center content-center" target="_blank" rel="noopener noreferrer">
              <Icon name="mdi:dropbox" class="sm:w-11 w-7 size-full"></Icon>
